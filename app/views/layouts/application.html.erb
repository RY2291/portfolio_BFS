<!DOCTYPE html>
<html>
  <head>
    <title>BFS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "Logo", top_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% if user_signed_in? %>
        <!--ログインしている場合　ヘッダー-->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "投稿一覧", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "地図", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            </ul>
            <div class="welcom">
              ようこそ、<%= current_user.name %>
            </div>
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
          </div>
        <!--フリーアクセス　ヘッダー-->
        <% else %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "地図", new_user_session_path, class: "nav-link" %>
              </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
          </div>
        <% end %>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="footer">
         ©  test
      </div>
    </footer>
  </body>
</html>

<style>
  .welcom {
    color: white;
  }
</style>