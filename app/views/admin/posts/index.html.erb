<table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th>投稿ID</th>
    <th>ユーザ名</th>
    <th>タイトル</th>
    <th>投稿日時</th>
    <th>投稿写真</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td> <%= link_to post.user.name, user_path(post.user_id) %></td>
      <td><%= post.title %></td>
      <td><%= post.created_at %></td>
      <td>
      <td>
        <% post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 100, 100, fallback: "no_image-.jpg" %>
        <% end %>
      </td>
      <td></td>
    </tr>
   <% end %>
  </tbody>
</table>