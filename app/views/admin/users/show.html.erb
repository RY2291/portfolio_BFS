<div class="container">
  <h2 class="mt-5 text-center"><%= @user.name%>さんの会員詳細</h2>
    <div class="row m-5">
      <div class="col-10 offset-1">
        <table class="table">
          <tr>
            <th class="text-center">会員ID</th>
            <td><%= @user.id%></td>
          </tr>
          <tr>
            <th class="text-center">ニックネーム</th>
            <td><%= (@user.name) %></td>
          </tr>
          <tr>
            <th class="text-center">フォロー</th>
            <td><%= @user.followings.count%></td>
          </tr>
          <tr>
            <th class="text-center">フォロワー</th>
            <td><%= @user.followers.count %></td>
          </tr>
          <tr>
            <th class="text-center">メールアドレス</th>
            <td><%= @user.email%></td>
          </tr>
          <tr>
            <th class="text-center">会員ステータス</th>
            <% if @user.is_deleted == true%>
             <td class="text-secondary">退会済み</td>
            <% else %>
             <td class="text-success">有効</td>
            <% end %>
          </tr>
        </table>
        <div class="d-flex justify-content-around">
          <p><%= link_to "編集する",edit_admin_user_path(@user.id), class:"btn btn-success"%></p>
        </div>
　    </div>
 　　   <div class="col-5 offset-1">
 　　   <table class='table table-hover table-inverse'>
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
         <% @posts.each do |post| %>
          <tr>
            <td>
              <% post.post_images.each do |image| %>
                <%= attachment_image_tag image, :image, :fill, 100, 100, fallback: "no_image-.jpg" %>
              <% end %>
            </td>
            <td><%= link_to post.title, admin_post_path(post.id) %></td>
            <td><%= post.introduction %></td>
            <td id="favorite_buttons_<%= post.id %>">
             <i class="far fa-heart"></i><%= post.favorites.count %>
            </td>
            <td>コメント数<%= post.comments.count %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
      
　 </div>
  </div>
</div>

