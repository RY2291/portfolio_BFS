<div class="container">
  <h1 class="form-title">アカウント情報編集</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-wrapper">
      <%= form_with model: @user, local:true do |f| %>
      <%= render "layouts/error_message", model: f.object %>
      <div class="form-group">
          <%= attachment_image_tag @user, :profile_image, format: "jpg", size: "100x100", fallback: "no_image-.jpg" %>
          <%= f.label :profile_image, "プロフィール画像"%>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :name, "ニックネーム", autofocus: ""  %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "紹介文" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <%= f.submit "変更する", class: "btn btn-primary form-submit-btn mb-5" %>
      <% end %>
      <%= link_to "退会する", user_withdraw_path(current_user), class: "btn btn-danger mb-3",
                                                                data: {confirm: "本当に退会しますか？今までの記録は削除されます"}  %>
    </div>
  </div>
</div>


