<div class="container">
  <div class="row new-content">
    <div class="col new-forms">
      <h2 class="new-title pb-3 mb-4 mt-5">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group row">
          <%= f.label :name, "ニックネーム", class: "col-sm-4 col-form-label" %>
          <div class="col-md-8">
             <%= f.text_field :name, autofocus: ""%>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :profile_image, "プロフィール画像", class: "col-sm-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.attachment_field :profile_image %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-sm-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, "パスワード", class: "col-sm-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-sm-4 col-form-label" %>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        <di class="row">
          <%= f.submit "登録", class: "btn btn-primary signup-btn" %>
        </di>
        
      <% end %>
    </div>
  </div>
</div>




