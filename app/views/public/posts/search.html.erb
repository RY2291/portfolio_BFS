<div class="container-fluid pt-5">
  <div class="tag-head">
    <%= form_with model: @post, url: tag_posts_path(tag_id: tag.id), method: :get, local: true do |f| %>
      <%= f.select :keyword, [["新しい順", "new"],
                        ["古い順", "old"],
                        ["いいねが多い順", "likes"],
                        ["いいねが少ない順", "dislikes"]
                        ] %>
      <%= f.submit "並び替える", class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
    <h3 class="tag-title"># <%= @tag.tag_name %></h3>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col" class="tag-img"></th>
            <th scope="col">タイトル</th>
            <th scope="col">住所</th>
            <th scope="col">紹介文</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
          <tbody>
            <tr>
              <th scope="row">
                <%= attachment_image_tag post.post_images[0], :image, size: "150x150", format: "jpg", fallback: "no_image-.jpg" %>
              </th>
              <td><%= link_to post.title, post_path(post.id) %></td>
              <td><%= post.address %></td>
              <td><%= post.introduction %></td>
              <td>
                <div id="favorites_button_<%= post.id %>">
                  <%= render partial: "public/favorites/favorite", locals: {post: post } %>
                </div>
              </td>
              <td><i class="far fa-comments"><%= link_to post.comments.count %></i></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>