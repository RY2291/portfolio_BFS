<div class="container-fluid pt-5">
  <div class="tag-head">
    <%= form_with url: tag_posts_path(tag_id: @tag.id), method: :get, local: true do |f| %>
      <%= f.hidden_field :tag_name, :value => @tag.tag_name %>
      <%= f.select :keyword, [["新しい順", "new"],
                        ["古い順", "old"],
                        ["いいねが多い順", "likes"],
                        ["いいねが少ない順", "dislikes"]
                        ] %>
      <%= f.submit "並び替える", class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
    <h3 class="tag-title"># <%= @tag.tag_name %></h3>
  </div>
  <div class="row">
    <% if @selected_posts %>
      <!--並び替えが選択されたとき-->
      <%= render partial: "public/posts/index", locals: { posts: @selected_posts} %>
    <% else %>
      <%= render partial: "public/posts/index", locals: { posts: @posts} %>
    <% end %>
  </div>
</div>