<h3>タグリスト</h3>
<% if @tag.exists? %>
    <% @tag.each do |tag| %>
      <%= link_to "# #{tag.tag_name}", tag_posts_path(tag_id: tag.id) %>
      <%= tag.posts.count %>
    <% end %>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
   <tr>
    <th>投稿者</th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% @posts.each do |post| %>
    <tr>
      <td>
      <%= link_to user_path(post.user_id) do %>
        <%= attachment_image_tag User.find(post.user_id), :profile_image, :fill, 40, 40, format: "jpg", fallback: "no_image-.jpg" %>
        <%= post.user.name %>
      <% end %>
      </td>
      <td><%= link_to post.title, post_path(post.id) %></td>
      <td><%= post.introduction %></td>
      <td></td>
      <td></td>
    </tr>
   <% end %>
  </tbody>
</table>

