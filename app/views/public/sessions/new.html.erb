<div class="container">
  <div class="row new-content justify-content-center">
    <div class="col-sm-7 new-forms">
      <h4 class="mt-3 new-title pb-3 mb-4">ログイン</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mb-3">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@gmail.com", class: "col-sm-12 new-field pl-2" %>
          </div>
          <div class="field mb-4">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-12 new-field" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field mt-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions mb-4 text-center">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg btn-block mt-2" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
