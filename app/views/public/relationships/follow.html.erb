<div class="container-fluid bg-info">
  <div class="row">
    <div class="col-6 mt-5">
      <h4>フォロー中</h4>
    </div>
    <div class="col-6 mt-5">
      <h4>フォロワー</h4>
    </div>
  </div>
  <div class="row">
    <!--フォロー中-->
    <div class="col-6">
    <% @followings.each do |following| %>
      <%= attachment_image_tag following, :profile_image, :fill, 100, 100, class: "rounded-circle", fallback: "no_image-.jpg"  %>

      <%= following.name %>
      <%= following.introduction %>
      <% if current_user.following?(@user) %>
        <!--引数にフォローするuser_idを渡す-->
          <%= link_to "フォローを外す", user_relationships_path(user_id: @user.id), method: :delete, class: "btn btn-danger btn-sm" %>
        <% else %>
          <%= link_to "フォローをする",  user_relationships_path(user_id: @user.id), method: :post, class: "btn btn-primary btn-sm" %>
        <% end %>
    <% end %>
    </div>
    <!--フォロワー-->
    <div class="col-6">
    <% @followers.each do |follower| %>
        <%= attachment_image_tag follower, :profile_image, :fill, 100, 100, class: "rounded-circle", fallback: "no_image-.jpg"  %>
        <%= follower.name %>
        <%= follower.introduction %>
        <% if current_user.following?(@user) %>
        <!--引数にフォローするuser_idを渡す-->
          <%= link_to "フォローを外す", user_relationships_path(user_id: @user.id), method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "フォローをする",  user_relationships_path(user_id: @user.id), method: :post, class: "btn btn-primary" %>
        <% end %>
    <% end %>
    </div>
  </div>
</div>